// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // NOTE: Switch back to "postgresql" for production
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Proof {
  proof_id             String    @id @default(cuid())
  order_id             String
  nfc_uid              String
  nfc_token            String    @unique
  enrollment_timestamp DateTime  @default(now())
  shipping_address_gps String    // Stored as JSON string
  warehouse_gps        String?   // Stored as JSON string
  photo_urls           String    // Stored as JSON string
  photo_hashes         String    // Stored as JSON string
  customer_phone_last4 String?
  delivery_timestamp   DateTime?
  delivery_gps         String?   // Stored as JSON string
  device_info          String?
  gps_verdict          String?
  phone_verified       Boolean?  @default(false)
  signature            String?
  key_id               String?   @default("key_001")
  nfs_proof_id         String?
  enrollment_status    String?
  
  // Alan's API verification response fields
  verification_status      String?   // e.g., "verified", "flagged"
  distance_meters          Float?    // Distance between shipping and delivery GPS
  verify_url               String?   // URL to view verification details on Alan's platform
  verification_updated_at  DateTime? // Timestamp when Alan's verification data was last updated
  
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt
}

